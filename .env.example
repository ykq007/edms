# General
COMPOSE_PROJECT_NAME=app_stack

# Database
POSTGRES_IMAGE=ankane/pgvector:pg16
POSTGRES_DB=app_db
POSTGRES_USER=app_user
POSTGRES_PASSWORD=app_password
POSTGRES_PORT=5432
DATABASE_URL=postgresql://app_user:app_password@postgres:5432/app_db?pgbouncer=true&connection_limit=1&pool_timeout=30

# Redis
REDIS_IMAGE=redis:7-alpine
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/0

# Elasticsearch
ELASTICSEARCH_IMAGE=docker.elastic.co/elasticsearch/elasticsearch:8.11.0
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_TRANSPORT_PORT=9300
ELASTICSEARCH_JAVA_OPTS=-Xms1g -Xmx1g
ELASTICSEARCH_URL=http://elasticsearch:9200

# Milvus
MILVUS_IMAGE=milvusdb/milvus:v2.3.9
MILVUS_PORT=19530
MILVUS_URL=milvus://milvus:19530

# Backend service
BACKEND_IMAGE=ghcr.io/example/backend:latest
BACKEND_PORT=8000
BACKEND_HEALTHCHECK_URL=http://localhost:8000/health
BACKEND_LOG_LEVEL=info

# Worker service
WORKER_IMAGE=ghcr.io/example/worker:latest
WORKER_HEALTHCHECK_CMD=true
WORKER_CONCURRENCY=1

# OCR service
OCR_SERVICE_IMAGE=ghcr.io/example/ocr-service:latest
OCR_SERVICE_PORT=7000
OCR_SERVICE_HEALTHCHECK_URL=http://localhost:7000/health

# Frontend
FRONTEND_IMAGE=ghcr.io/example/frontend:latest
FRONTEND_PORT=3000
FRONTEND_HEALTHCHECK_URL=http://localhost:3000/health
