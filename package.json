{
  "name": "cto-new-monorepo",
  "private": true,
  "version": "0.1.0",
  "license": "MIT",
  "packageManager": "pnpm@8.15.8",
  "engines": {
    "node": "^20.0.0",
    "pnpm": "^8.0.0"
  },
  "scripts": {
    "prepare": "husky",
    "lint": "pnpm exec eslint . --ext .js,.cjs,.mjs,.ts,.tsx",
    "format": "pnpm exec prettier --check .",
    "format:write": "pnpm exec prettier --write .",
    "typecheck": "pnpm exec tsc --pretty --noEmit --project tsconfig.base.json"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "6.7.5",
    "@typescript-eslint/parser": "6.7.5",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "husky": "9.0.11",
    "lint-staged": "15.2.2",
    "prettier": "3.2.5",
    "typescript": "5.4.5"
  },
  "lint-staged": {
    "*.{js,cjs,mjs,ts,tsx}": [
      "pnpm exec eslint --fix",
      "pnpm exec prettier --write"
    ],
    "*.{json,md,mdx,yml,yaml}": [
      "pnpm exec prettier --write"
    ]
  }
}
